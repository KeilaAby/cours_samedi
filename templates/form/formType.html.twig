{% block form_row %}

	<div class="flex flex-col space-y-2">

		{{ form_label(form) }}

		{{ form_widget(form, 
        {'attr': {'class': 'focus:outline-none border border-gray-300 rounded-md shadow-sm p-2 w-full'}} )}}

        {{ form_help(form) }}


		{# {{ form_errors(form) }} #}


		{% block form_errors %}
			{% if errors|length > 0 %}
				<ul class="">
					{% for error in errors %}
						<li class="text-sm text-red-400 ">{{ error.message }}</li>
					{% endfor %}
				</ul>
			{% endif %}
		{% endblock %}

	</div>

{% endblock %}
